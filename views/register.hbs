<h1 class="text-center my-5">Registro de usuarios</h1>

<div class="row justify-content-center">

    <div class="col-md-6">

        <form action="/auth/register" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input type="text" name="userName" class="form-control mb-2" placeholder="Ingresar nombre">
            <input type="text" name="email" class="form-control mb-2" placeholder="Ingresar email">
            <input type="password" name="password" class="form-control mb-2" placeholder="Ingresar contraseña">
            <input type="password" name="repassword" class="form-control mb-2" placeholder="Repita contraseña">
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>

    </div>

</div>
